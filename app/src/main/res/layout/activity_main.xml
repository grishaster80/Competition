<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.debug.uikit.UiKitCardExpandable
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:card_expandable_button_text="Button"
            app:card_expandable_header_text="Header"
            app:card_expandable_icon="@drawable/star_icon"
            app:card_expandable_subheader_text="Subheader" />

        <com.debug.uikit.UiKitCardExpandable
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:card_expandable_button_text="Button"
            app:card_expandable_header_text="Header"
            app:card_expandable_icon="@drawable/star_icon" />

        <com.debug.uikit.UiKitCardClosable
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:card_closable_title_text="Title"
            app:card_closable_description_text="Description"
            app:card_closable_is_closable="false"
            app:card_closable_icon="@drawable/star_icon" />

        <com.debug.uikit.UiKitCardClosable
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:card_closable_title_text="Title"
            app:card_closable_description_text="Description"
            app:card_closable_icon="@drawable/star_icon" />

        <com.debug.uikit.UiKitCardScrollable
            android:id="@+id/first_scrollable"
            android:layout_marginVertical="8dp"
            app:card_scrollable_main_title="Title"
            app:card_scrollable_main_button_bold_text="Button"
            app:card_scrollable_main_button_main_text="Button"
            app:card_closable_icon="@drawable/star_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.debug.uikit.UiKitCardScrollable
            android:id="@+id/second_scrollable"
            android:layout_marginVertical="8dp"
            app:card_scrollable_main_title="Title"
            app:card_scrollable_main_button_bold_text="Button"
            app:card_scrollable_main_button_main_text="Button"
            app:card_closable_icon="@drawable/star_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.debug.uikit.UiKitButton
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:button_text="@string/app_name" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>